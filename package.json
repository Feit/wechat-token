{
  "name": "wechat-token",
  "version": "0.3.0",
  "description": "An auto refresh wechat access token manager",
  "main": "./lib/token-manager",
  "scripts": {
    "compile": "babel --plugins \"transform-runtime\" ./src --ignore tests --out-dir ./lib",
    "test": "_mocha $npm_package_options_mocha",
    "test-watch": "npm run test -- --watch",
    "cov": "istanbul cover --report html _mocha -- $npm_package_options_mocha"
  },
  "options": {
    "mocha": "--compilers js:babel-core/register src/tests/**/*.js"
  },
  "author": "feit",
  "license": "MIT",
  "dependencies": {
    "request": "^2.69.0",
    "babel-runtime": "^6.3.19"
  },
  "devDependencies": {
    "babel-core": "^6.4.5",
    "babel-eslint": "^4.1.6",
    "babel-plugin-transform-runtime": "^6.4.3",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-2": "^6.3.13",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^4.0.0",
    "istanbul": "^0.4.2",
    "mocha": "^2.4.5",
    "nock": "^7.0.2",
    "should": "^8.2.1"
  }
}
